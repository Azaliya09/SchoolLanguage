<Window x:Class="SchoolLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolLanguage"
        mc:Ignorable="d"
        Title="Школа языков 'Леарн'" Height="450" Width="860">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="143*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="379*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFE7FABF" Grid.RowSpan="2"></Rectangle>
        <Rectangle Fill="#FFE7FABF" Grid.ColumnSpan="2"></Rectangle>
        <Image Source="/Resources/school_logo.png" ></Image>
        <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Margin="5">
            <Button x:Name="BackBtn">Назад</Button>
            <Button x:Name="ForwardBtn">Вперед</Button>
        </StackPanel>
        <TextBlock x:Name="TitleTb" Grid.Column="1" FontSize="25" HorizontalAlignment="Center">Школа языков"Леарн"</TextBlock>
        <Frame x:Name="MainFrame" Grid.Column="1" Grid.Row="1"></Frame>
    </Grid>
</Window>
